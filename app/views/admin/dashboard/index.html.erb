<section class="container mx-auto fullscreen">
  <h1 class="text-center pt-4">Dashboard</h1>
  <p><%= link_to "New Article", new_admin_article_path, class: "m-4 text-2xl" %></p>
  <p><%= link_to "User Management", admin_user_management_index_path, class: "m-4 text-2xl" if current_user.editor? %></p>
  <div class="container mx-auto px-4 mt-10">
    <hr>
    <table>
      <tr class="font-bold">
        <td>ID</td>
        <td>Category</td>
        <td>Title</td>
        <td>Content</td>
        <td>Author</td>
        <td>Approved status</td>
        <td>Edit</td>
        <td>delete</td>
      </tr>
      <% @articles.each do |article| %>
        <tr id="<%= dom_id(article) %>">        
          <td><%= article.id %></td>
          <td><%= article.category.name %></td>
          <td><%= link_to article.title, admin_article_path(article) %></td>
          <td><%= article.content[0..150] %></td>
          <td><%= article.author %></td>
          <td><%= article.approved %></td>
          <td><%= link_to "Edit", edit_admin_article_path(article) %></td>
          <td><%= link_to "Delete", admin_article_path(article),  method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
      <% end %>
    </table>
  </div>
</section>